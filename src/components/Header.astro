<header bg-slate-200>
  <div x-data="{ showmenu: false }" class="p-6 static lg:static w-full">
    <div id="navbar" class="flex flex-row justify-between">
      <div id="logo" class="font-bold"><a href="#link1">Site logo</a></div>
      <nav id="desktopmenu" class="hidden lg:block">
        <ul class="flex flex-row gap-4">
          <li class="hover:text-red-500"><a href="#link1">Toppen</a></li>
          <li class="hover:text-red-500"><a href="#link2">Bogens kapitler</a></li>
          <li class="hover:text-red-500"><a href="#link3">Anmeldelser</a></li>
          <li class="hover:text-red-500"><a href="#link4">Billeder fra bogen</a></li>
