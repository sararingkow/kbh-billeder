---
const { variant = "primary", size = "small" } = Astro.props;

const buttonStyling = `bg-orange-400  hover:bg-orange-600 text-slate-100 font-bold py-2 px-4 rounded transition duration-300`;

const variantClasses = {
  primary: "bg-orange-400  hover:bg-orange-600 text-slate-100 font-bold py-2 px-4 rounded transition duration-300",
  secondary: "bg-gray-500 hover:bg-gray-700 text-slate-100 font-bold py-2 px-4 rounded transition duration-300",
};

const sizeClasses = {
  small: "text-sm",
  medium: "text-md",
  large: "text-lg",
};
---

<div>
  <button class={`${buttonStyling} ${variantClasses[variant]} ${sizeClasses[size]}`}><slot /></button>
</div>
