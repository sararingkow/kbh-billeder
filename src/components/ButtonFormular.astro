---
const { variant = "primary", size = "small" } = Astro.props;

const buttonStyling = `bg-orange-400 text-slate-100 font-bold py-2 px-4 rounded transition duration-300`;

const variantClasses = {
  primary:
    "transition ease-in-out delay-150 bg-orange-400 hover:-translate-y-1 hover:scale-105 hover:bg-orange-600 duration-300 text-white font-bold py-2 px-4 rounded",
};

const sizeClasses = {
  small: "text-sm",
  medium: "text-md",
  large: "text-lg",
};
---

<div>
  <button class={`${buttonStyling} ${variantClasses[variant]} ${sizeClasses[size]} flex items-center gap-2`}>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Z"
      ></path>
    </svg>
    <slot />
  </button>
</div>
